    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq"
            crossorigin="anonymous"></script>

    <script>
        // Gạch khi đã chuẩn bị nguyên liệu xong
        document.querySelectorAll('.ingredient-item').forEach(item => {
            item.addEventListener('click', () => {
                const text = item.querySelector('.ingredient-text');
                const icon = item.querySelector('.checkIcon');

                text.classList.toggle('checked');
                icon.classList.toggle('checked');
            });
        });

        // Gắn tag tên cho thẻ Category
        const tagText = document.querySelectorAll('.tag').forEach(tag => {
            // console.log(tag.textContent.toLocaleLowerCase());
            let check = tag.textContent.toLocaleLowerCase();
            tag.className += check;
        });
        const tag1Text = document.querySelectorAll('.tag1').forEach(tag => {
            // console.log(tag.textContent.toLocaleLowerCase());
            let check = tag.textContent.toLocaleLowerCase();
            tag.className += check;
        });

        // Icon User
        function toggleMenu() {
            document.getElementById("userMenu").classList.toggle("active");
        }
        // Close menu when click outside
        window.addEventListener('click', function (e) {
            const menu = document.getElementById("userMenu");
            if (!menu.contains(e.target)) {
                menu.classList.remove("active");
            }
        });
    </script>

</body>
</html>
