                                       class="form-control" placeholder="Search..." aria-label="Search">

                            </form>
                        </div>
                        @* <div class="col-4 mt-3 login"> *@
                            @* <button type="button" class="btn btn-login">Login</button> *@
                        @* </div> *@
                        <div class="col-4 mt-2">
                            <div class="user-menu" id="userMenu">
                                <div class="user-icon" onclick="toggleMenu()">
                                    <i class="fa-regular fa-user"></i>
                                </div>
                                <div class="submenu">
                                    <a href="#">Profile</a>
                                    <a href="#">Wishlists</a>
                                    <a href="#">Logout</a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </header>

            @RenderBody()

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <!-- About -->
                    <div class="footer-section footer-about">
                        <h3>About</h3>
                        <p>
                            I create simple, delicious recipes that require 10 ingredients or less, one bowl, or 30
                            minutes
                            or
