                            <div class="posts">4 Posts</div>
                        </div>

                        <div class="item">
                            <img src="/images/category-basic300x300.jpg" />
                            <div class="label basic"><i class="fa-solid fa-tag"></i> Basic</div>
                            <div class="posts">4 Posts</div>
                        </div>
                        <div class="item">
                            <img src="/images/category-easy300x300.jpg" />
                            <div class="label easy"><i class="fa-solid fa-tag"></i> Easy</div>
                            <div class="posts">6 Posts</div>
                        </div>
                        <div class="item">
                            <img src="/images/category-pork300x300.jpg" />
                            <div class="label pork"><i class="fa-solid fa-tag"></i> Pork</div>
                            <div class="posts">6 Posts</div>
                        </div>
                        <div class="item">
                            <img src="/images/category-vege300x300.jpg" />
                            <div class="label vegan"><i class="fa-solid fa-tag"></i> Vegan</div>
                            <div class="posts">6 Posts</div>
                        </div>
                        <div class="item">
                            <img src="/images/category-chicken300x300.png" />
                            <div class="label chicken"><i class="fa-solid fa-tag"></i> Chicken</div>
                            <div class="posts">4 Posts</div>
                        </div>
                        <div class="item">
                            <img src="/images/category-seafood300x300.jpg" />
                            <div class="label seafood"><i class="fa-solid fa-tag"></i> Seafood</div>
                            <div class="posts">6 Posts</div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-3">
                    <!-- Subscribe -->
                    <div class="footer-section footer-subscribe">
                        <div class="section-title">Subscribe to us</div>
                        <p>Enter your email address below to subscribe to my newsletter</p>
                        <input type="email" placeholder="Please enter your e-mail" />
                        <button>SUBSCRIBE</button>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
